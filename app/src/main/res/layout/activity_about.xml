<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.bakatsuki.bakatsuki.About">







    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/logo1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo_imageview"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نبذة عن جنودنا البواسل"
        android:id="@+id/about_soldiers_title"
        android:textSize="30sp"
        android:textColor="@color/lighter"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo_imageview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/about_soldiers_value"
        android:textColor="@color/text_color"
        android:text="جنودنا هم أبطالنا فلا يوجد أشجع ممن ترك كل ما يحبه خلفه لحماية وطنه وتحقيق مستقبل يراه أمامه، فهم يخاطرون بحياتهم لنحيا نحن بأمان ويزدهر وطننا، فالفرد منهم يشكل قوة عظيمة لنا فهم الحاجز الذي يبعد عنا من يريدون ايذائنا وهم بعد الله تعالى سبب لنومنا هانئين في الليل بالرغم من التهديدات التي تحيط بنا"
        android:layout_below="@id/about_soldiers_title"

        />


    <Button
        android:id="@+id/to_sign_up_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_below="@id/about_soldiers_value"
        android:layout_centerHorizontal="true"
        android:text="ابدأ" />




</RelativeLayout>
