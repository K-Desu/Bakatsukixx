<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.bakatsuki.bakatsuki.SignIn">

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/email_inputlayout"
        android:layout_marginTop="20dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:ems="3"
            android:textColor="#616161"
            android:id="@+id/email_editext_login"
            android:inputType="textEmailAddress"
            android:maxLength="100"
            android:textColorHint="#bdbdbd"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:hint="البريد الإلكتروني"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_inputlayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/password_inputlayout"
        android:layout_marginTop="20dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:ems="3"
            android:textColorHint="#bdbdbd"
            android:id="@+id/password_edittext_login"
            android:inputType="textPassword"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:hint="الرمز السري"
            />
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_inputlayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/dr_code_inputlayout"
        android:layout_marginTop="20dp">


    </android.support.design.widget.TextInputLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/sign_in_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_below="@id/dr_code_inputlayout"
        android:layout_centerHorizontal="true"
        android:text="دخول" />








</RelativeLayout>
